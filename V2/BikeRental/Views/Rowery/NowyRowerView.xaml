<local:JedenViewBase x:Class="BikeRental.Views.NowyRowerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BikeRental.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" FontSize="10" Content="Wybierz model" Margin="0,8,0,8"/>
        <ComboBox Grid.Column="1" Grid.Row="0" Margin="0,8,0,8"
          ItemsSource="{Binding DostepneModele}"
          SelectedValue="{Binding RowerModelId, Mode=TwoWay}"
          SelectedValuePath="Id"
          DisplayMemberPath="Name"/>

        <Label Grid.Column="0" Grid.Row="1" FontSize="10" Content="Numer seryjny" Margin="0,8,0,8"/>
        <TextBox Grid.Column="1" Grid.Row="1" Margin="0,8,0,8" Text="{Binding Path=NumerSeryjny, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Column="0" Grid.Row="2" FontSize="10" Content="Kod floty" Margin="0,8,0,8"/>
        <TextBox Grid.Column="1" Grid.Row="2" Margin="0,8,0,8" Text="{Binding Path=KodFloty, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Column="0" Grid.Row="3" FontSize="10" Content="Stacja" Margin="0,8,0,8"/>
        <ComboBox Grid.Column="1" Grid.Row="3" Margin="0,8,0,8"
            ItemsSource="{Binding DostepneStacje}"
            SelectedValue="{Binding OstatniaStacjaId, Mode=TwoWay}"
            SelectedValuePath="Id"
            DisplayMemberPath="Name"/>

        <Label Grid.Column="0" Grid.Row="4" FontSize="10" Content="Stojak" Margin="0,8,0,8"/>
        <ComboBox Grid.Column="1" Grid.Row="4" Margin="0,8,0,8"
            ItemsSource="{Binding DostepneStojaki}"
            SelectedValue="{Binding OstatniStojakId, Mode=TwoWay}"
            SelectedValuePath="Id"
            DisplayMemberPath="Name"/>

        <Label Grid.Column="0" Grid.Row="5" FontSize="10" Content="Przebieg" Margin="0,8,0,8"/>
        <TextBox Grid.Column="1" Grid.Row="5" Margin="0,8,0,8" Text="{Binding Path=PrzebiegKm, UpdateSourceTrigger=PropertyChanged}" />

        <Label Grid.Column="0" Grid.Row="6" FontSize="10" Content="Data przegladu" Margin="0,8,0,8"/>
        <DatePicker Grid.Column="1" Grid.Row="6" 
            x:Name="dpDataPrzegladu" 
            SelectedDateFormat="Short"
            Language="pl-PL"
            Width="200"
            Margin="0,8,0,8"
            SelectedDate="{Binding DataPrzegladu, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        
        <Label Grid.Column="0" Grid.Row="7" FontSize="10" Content="Poziom baterii [%]" Margin="0,8,0,8"/>
        <TextBox Grid.Column="1" Grid.Row="7" Margin="0,8,0,8" Text="{Binding Path=PoziomBateriiProc, UpdateSourceTrigger=PropertyChanged}" />

        <Label Grid.Column="0" Grid.Row="8" FontSize="10" Content="Stan" Margin="0,8,0,8"/>
        <ComboBox Grid.Column="1" Grid.Row="8"
  ItemsSource="{Binding DostepneStany}"
  DisplayMemberPath="Nazwa"
  SelectedValuePath="StanId"
  SelectedValue="{Binding Stan, Mode=TwoWay}"
  Margin="0,8,0,8"
  Width="200"/>
    </Grid>
</local:JedenViewBase>
