<local:JedenViewBase x:Class="BikeRental.Views.NowyAbonamentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BikeRental.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Label Grid.Column="0" Grid.Row="0" FontSize="10" Content="Imie" Margin="0,8,0,8"/>
        <TextBox IsEnabled="False" Grid.Column="1" Grid.Row="0" Margin="0,8,0,8" Text="{Binding Path=ImieKlienta, UpdateSourceTrigger=PropertyChanged}"/>
        <Button Content="..." Grid.Column="1"  Grid.Row="0" Margin="170,8,0,8" Command="{Binding ShowKlienciCommand}"/>

        <Label Grid.Column="0" Grid.Row="1" FontSize="10" Content="Nazwisko" Margin="0,8,0,8"/>
        <TextBox IsEnabled="False" Grid.Column="1" Grid.Row="1" Margin="0,8,0,8" Text="{Binding Path=NazwiskoKlienta, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Column="0" Grid.Row="2" FontSize="10" Content="Plan cenowy" Margin="0,8,0,8"/>
        <ComboBox Grid.Column="1" Grid.Row="2"
            ItemsSource="{Binding PlanCenowyItems}"
            DisplayMemberPath="Nazwa"
            SelectedValuePath="PlanCenowyId"
            SelectedValue="{Binding PlanCenowyId, Mode=TwoWay}"
            Margin="0,8,0,8"
            Width="200"/>

        <Label Grid.Column="0" Grid.Row="3" FontSize="10" Content="Data rozpoczecia" Margin="0,8,0,8"/>
        <DatePicker  Grid.Column="1"  Grid.Row="3"	Margin="0,8,0,8"  Width="200" HorizontalAlignment="Left"  SelectedDate="{Binding DataStart, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Column="0" Grid.Row="4" FontSize="10" Content="Data zakonczenia" Margin="0,8,0,8"/>
        <DatePicker  Grid.Column="1"  Grid.Row="4"	Margin="0,8,0,8"  Width="200" HorizontalAlignment="Left"  SelectedDate="{Binding DataKoniec, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Column="0" Grid.Row="5" FontSize="10" Content="Status" Margin="0,8,0,8"/>
        <ComboBox Grid.Column="1" Grid.Row="5"
            ItemsSource="{Binding StatusItems}"
            DisplayMemberPath="Nazwa"
            SelectedValuePath="Status"
            SelectedValue="{Binding Status, Mode=TwoWay}"
            Margin="0,8,0,8"
            Width="200"/>
    </Grid>
</local:JedenViewBase>
