<UserControl x:Class="BikeRental.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Nagłówek -->
            <Border Padding="14"
                    CornerRadius="10"
                    Background="{StaticResource CardBgBrush}"
                    BorderBrush="{StaticResource BorderBrushSoft}"
                    BorderThickness="1">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Left">
                        <TextBlock Text="BikeRental"
                                   FontSize="22"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextBrush}"/>
                        <TextBlock Text="Strona główna (dashboard)"
                                   Margin="0,4,0,0"
                                   Foreground="{StaticResource MutedTextBrush}"/>
                    </StackPanel>

                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Content="Nowe wypożyczenie"
                                Margin="0,0,8,0"
                                Style="{StaticResource NavButtonStyle}" Width="142"/>
                        <Button Content="Nowa rezerwacja"
                                Margin="0,0,8,0"
                                Style="{StaticResource NavButtonStyle}" Width="120"/>
                        <Button Content="Dodaj klienta"
                                Margin="0,0,8,0"
                                Style="{StaticResource NavButtonStyle}" Width="98"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- KPI -->
            <UniformGrid Grid.Row="1" Columns="4" Margin="0,12,0,0">
                <Border Margin="0,0,12,0"
                        Padding="12"
                        CornerRadius="10"
                        Background="{StaticResource CardBgBrush}"
                        BorderBrush="{StaticResource BorderBrushSoft}"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Aktywne wypożyczenia" Foreground="{StaticResource MutedTextBrush}"/>
                        <TextBlock Text="12" FontSize="26" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}"/>
                    </StackPanel>
                </Border>

                <Border Margin="0,0,12,0"
                        Padding="12"
                        CornerRadius="10"
                        Background="{StaticResource CardBgBrush}"
                        BorderBrush="{StaticResource BorderBrushSoft}"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Dostępne rowery" Foreground="{StaticResource MutedTextBrush}"/>
                        <TextBlock Text="34" FontSize="26" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}"/>
                    </StackPanel>
                </Border>

                <Border Margin="0,0,12,0"
                        Padding="12"
                        CornerRadius="10"
                        Background="{StaticResource CardBgBrush}"
                        BorderBrush="{StaticResource BorderBrushSoft}"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Rezerwacje dziś" Foreground="{StaticResource MutedTextBrush}"/>
                        <TextBlock Text="5" FontSize="26" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}"/>
                    </StackPanel>
                </Border>

                <Border Padding="12"
                        CornerRadius="10"
                        Background="{StaticResource CardBgBrush}"
                        BorderBrush="{StaticResource BorderBrushSoft}"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Przychód dziś" Foreground="{StaticResource MutedTextBrush}"/>
                        <TextBlock Text="480 zł" FontSize="26" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Dwie kolumny: To-do + Ostatnie zdarzenia -->
            <Grid Grid.Row="2" Margin="0,12,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- To-do -->
                <Border Margin="0,0,12,0"
                        Padding="12"
                        CornerRadius="10"
                        Background="{StaticResource CardBgBrush}"
                        BorderBrush="{StaticResource BorderBrushSoft}"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Do zrobienia dziś"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextBrush}"
                                   Margin="0,0,0,8"/>

                        <Border Padding="10" CornerRadius="8" Background="{StaticResource NavItemHoverBgBrush}">
                            <TextBlock Text="• Zwroty do 18:00 (3)" Foreground="{StaticResource TextBrush}"/>
                        </Border>
                        <Border Padding="10" CornerRadius="8" Background="{StaticResource NavItemHoverBgBrush}" Margin="0,8,0,0">
                            <TextBlock Text="• Rezerwacje do potwierdzenia (2)" Foreground="{StaticResource TextBrush}"/>
                        </Border>
                        <Border Padding="10" CornerRadius="8" Background="{StaticResource NavItemHoverBgBrush}" Margin="0,8,0,0">
                            <TextBlock Text="• Rower #23 – zgłoszenie serwisowe (1)" Foreground="{StaticResource TextBrush}"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Ostatnie zdarzenia -->
                <Border Grid.Column="1"
                        Padding="12"
                        CornerRadius="10"
                        Background="{StaticResource CardBgBrush}"
                        BorderBrush="{StaticResource BorderBrushSoft}"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Ostatnie zdarzenia"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextBrush}"
                                   Margin="0,0,0,8"/>

                        <ListBox BorderThickness="0"
                                 Background="Transparent"
                                 Foreground="{StaticResource TextBrush}">
                            <ListBoxItem Content="12:10 • Wypożyczenie • Klient: Jan Kowalski • Rower: #12"/>
                            <ListBoxItem Content="11:40 • Płatność • 45 zł • Klient: Anna Nowak"/>
                            <ListBoxItem Content="10:05 • Zwrot • Rower: #7 • Stan OK"/>
                            <ListBoxItem Content="09:30 • Rezerwacja • 2 rowery • Dziś 16:00"/>
                        </ListBox>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
