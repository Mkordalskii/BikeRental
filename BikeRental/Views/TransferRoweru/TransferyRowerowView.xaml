<local:WszystkieViewBase x:Class="BikeRental.Views.TransferyRowerowView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BikeRental.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding List}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding TransferId}"/>
                <DataGridTextColumn Header="Kod roweru" Binding="{Binding KodFloty}"/>
                <DataGridTextColumn Header="Nr seryjny" Binding="{Binding NumerSeryjny}"/>
                <DataGridTextColumn Header="Stacja zrodlowa" Binding="{Binding KodStacjiZrodlowej}"/>
                <DataGridTextColumn Header="Stacja docelowa" Binding="{Binding KodStacjiDocelowej}"/>
                <DataGridTextColumn Header="Data startu" Binding="{Binding DataStartUtc}"/>
                <DataGridTextColumn Header="Data zakonczenia" Binding="{Binding DataKoniecUtc}"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}"/>
                <DataGridTextColumn Header="Uwagi" Binding="{Binding Uwagi}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</local:WszystkieViewBase>
