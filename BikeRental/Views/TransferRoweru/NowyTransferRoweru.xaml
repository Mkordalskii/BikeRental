<local:JedenViewBase x:Class="BikeRental.Views.NowyTransferRoweru"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BikeRental.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <!-- Kod floty -->
        <Label Grid.Column="0" Grid.Row="0" FontSize="10" Content="Rower" Margin="0,8,0,8"/>
        <TextBox Grid.Column="1" Grid.Row="0"
             Margin="0,8,0,8"
             Width="200"
             IsEnabled="False"
             Text="{Binding KodFloty, UpdateSourceTrigger=PropertyChanged}"/>
        <Button Grid.Column="1" Grid.Row="0"
            Content="..."
            Margin="170,8,0,8"
            Command="{Binding ShowRoweryCommand}"/>

        <!-- Nr seryjny -->
        <Label Grid.Column="0" Grid.Row="1" FontSize="10" Content="Nr seryjny" Margin="0,8,0,8"/>
        <TextBox Grid.Column="1" Grid.Row="1"
             Margin="0,8,0,8"
             Width="200"
             IsEnabled="False"
             Text="{Binding NrSeryjny, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Stacja źródłowa -->
        <Label Grid.Column="0" Grid.Row="2" FontSize="10" Content="Stacja źródłowa" Margin="0,8,0,8"/>
        <ComboBox Grid.Column="1" Grid.Row="2"
              ItemsSource="{Binding StacjaItems}"
              DisplayMemberPath="Nazwa"
              SelectedValuePath="StacjaId"
              SelectedValue="{Binding StacjaZrodlowaId, Mode=TwoWay}"
              Margin="0,8,0,8"
              Width="200"/>

        <!-- Stacja docelowa -->
        <Label Grid.Column="0" Grid.Row="3" FontSize="10" Content="Stacja docelowa" Margin="0,8,0,8"/>
        <ComboBox Grid.Column="1" Grid.Row="3"
              ItemsSource="{Binding StacjaItems}"
              DisplayMemberPath="Nazwa"
              SelectedValuePath="StacjaId"
              SelectedValue="{Binding StacjaDocelowaId, Mode=TwoWay}"
              Margin="0,8,0,8"
              Width="200"/>

        <!-- Data startu -->
        <Label Grid.Column="0" Grid.Row="4" FontSize="10" Content="Data startu" Margin="0,8,0,8"/>
        <DatePicker Grid.Column="1" Grid.Row="4"
                Margin="0,8,0,8"
                Width="200"
                SelectedDateFormat="Short"
                Language="pl-PL"
                SelectedDate="{Binding DataStartUtc, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Data zakończenia -->
        <Label Grid.Column="0" Grid.Row="5" FontSize="10" Content="Data zakonczenia" Margin="0,8,0,8"/>
        <DatePicker Grid.Column="1" Grid.Row="5"
                Margin="0,8,0,8"
                Width="200"
                SelectedDateFormat="Short"
                Language="pl-PL"
                SelectedDate="{Binding DataKoniecUtc, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Status -->
        <Label Grid.Column="0" Grid.Row="6" FontSize="10" Content="Status" Margin="0,8,0,8"/>
        <ComboBox Grid.Column="1" Grid.Row="6"
              ItemsSource="{Binding StatusItems}"
              DisplayMemberPath="Nazwa"
              SelectedValuePath="StatusId"
              SelectedValue="{Binding StatusId, Mode=TwoWay}"
              Margin="0,8,0,8"
              Width="200"/>

        <!-- Uwagi -->
        <Label Grid.Column="0" Grid.Row="7" FontSize="10" Content="Uwagi" Margin="0,8,0,8"/>
        <TextBox Grid.Column="1" Grid.Row="7"
             Margin="0,8,0,8"
             Width="200"
             Text="{Binding Uwagi, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</local:JedenViewBase>
