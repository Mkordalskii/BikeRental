<local:JedenViewBase x:Class="BikeRental.Views.NowyPlanCenowyStawkaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BikeRental.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" FontSize="10" Content="Plan cenowy" Margin="0,8,0,8"/>
        <ComboBox Grid.Column="1" Grid.Row="0"
            ItemsSource="{Binding PlanCenowyItems}"
            DisplayMemberPath="Nazwa"
            SelectedValuePath="PlanCenowyId"
            SelectedValue="{Binding PlanCenowyId, Mode=TwoWay}"
            Margin="0,8,0,8"
            Width="200"/>

        <Label Grid.Column="0" Grid.Row="1" FontSize="10" Content="Typ" Margin="0,8,0,8"/>
        <ComboBox Grid.Column="1" Grid.Row="1"
            ItemsSource="{Binding TypItems}"
            DisplayMemberPath="Nazwa"
            SelectedValuePath="TypId"
            SelectedValue="{Binding Typ, Mode=TwoWay}"
            Margin="0,8,0,8"
            Width="200"/>

        <Label Grid.Column="0" Grid.Row="2" FontSize="10" Content="Od minuty" Margin="0,8,0,8"/>
        <TextBox Grid.Column="1" Grid.Row="2" Margin="0,8,0,8" Text="{Binding Path=OdMinuty, UpdateSourceTrigger=LostFocus}"/>

        <Label Grid.Column="0" Grid.Row="3" FontSize="10" Content="Do minuty" Margin="0,8,0,8"/>
        <TextBox Grid.Column="1" Grid.Row="3" Margin="0,8,0,8" Text="{Binding Path=DoMinuty, UpdateSourceTrigger=LostFocus}"/>

        <Label Grid.Column="0" Grid.Row="4" FontSize="10" Content="Cena za min" Margin="0,8,0,8"/>
        <TextBox Grid.Column="1" Grid.Row="4" Margin="0,8,0,8" Text="{Binding Path=CenaZaMin, UpdateSourceTrigger=LostFocus}"/>

        <Label Grid.Column="0" Grid.Row="5" FontSize="10" Content="Oplata startowa" Margin="0,8,0,8"/>
        <TextBox Grid.Column="1" Grid.Row="5" Margin="0,8,0,8" Text="{Binding Path=OplataStartowa, UpdateSourceTrigger=LostFocus}"/>

        <Label Grid.Column="0" Grid.Row="6" FontSize="10" Content="Limit darmowych minut" Margin="0,8,0,8"/>
        <TextBox Grid.Column="1" Grid.Row="6" Margin="0,8,0,8" Text="{Binding Path=LimitDarmowychMin, UpdateSourceTrigger=LostFocus}"/>

        <Label Grid.Column="0" Grid.Row="7" FontSize="10" Content="Doplata po limicie" Margin="0,8,0,8"/>
        <TextBox Grid.Column="1" Grid.Row="7" Margin="0,8,0,8" Text="{Binding Path=DoplataPoLimicie, UpdateSourceTrigger=Default}"/>
    </Grid>
</local:JedenViewBase>
