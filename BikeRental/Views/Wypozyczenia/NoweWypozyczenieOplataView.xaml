<local:JedenViewBase x:Class="BikeRental.Views.NoweWypozyczenieOplataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BikeRental.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <!-- Id wypożyczenia -->
        <Label Grid.Column="0" Grid.Row="0" FontSize="10" Content="Id wypożyczenia" Margin="0,8,0,8"/>
        <ComboBox Grid.Column="1" Grid.Row="0"
              ItemsSource="{Binding WypozyczenieItems}"
              DisplayMemberPath="WypozyczenieId"
              SelectedValuePath="WypozyczenieId"
              SelectedValue="{Binding WypozyczenieId, Mode=TwoWay}"
              Margin="0,8,0,8"
              Width="200"/>

        <!-- Typ -->
        <Label Grid.Column="0" Grid.Row="1" FontSize="10" Content="Typ" Margin="0,8,0,8"/>
        <ComboBox Grid.Column="1" Grid.Row="1"
              ItemsSource="{Binding TypItems}"
              DisplayMemberPath="Nazwa"
              SelectedValuePath="TypId"
              SelectedValue="{Binding Typ, Mode=TwoWay}"
              Margin="0,8,0,8"
              Width="200"/>

        <!-- Ilość minut -->
        <Label Grid.Column="0" Grid.Row="2" FontSize="10" Content="Ilość minut" Margin="0,8,0,8"/>
        <TextBox Grid.Column="1" Grid.Row="2"
             Margin="0,8,0,8"
             Width="200"
             Text="{Binding IloscMin, UpdateSourceTrigger=LostFocus}"/>

        <!-- Stawka -->
        <Label Grid.Column="0" Grid.Row="3" FontSize="10" Content="Stawka" Margin="0,8,0,8"/>
        <TextBox Grid.Column="1" Grid.Row="3"
             Margin="0,8,0,8"
             Width="200"
             Text="{Binding Stawka, UpdateSourceTrigger=LostFocus}"/>

        <!-- Kwota -->
        <Label Grid.Column="0" Grid.Row="4" FontSize="10" Content="Kwota" Margin="0,8,0,8"/>
        <TextBox Grid.Column="1" Grid.Row="4"
             Margin="0,8,0,8"
             Width="200"
             Text="{Binding Kwota, UpdateSourceTrigger=LostFocus}"/>
    </Grid>
</local:JedenViewBase>
