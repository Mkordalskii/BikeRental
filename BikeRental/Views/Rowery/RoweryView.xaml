<UserControl x:Class="BikeRental.Views.RoweryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BikeRental.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <DataGrid AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" />
                <DataGridTextColumn Header="Id modelu" />
                <DataGridTextColumn Header="Numer seryjny" />
                <DataGridTextColumn Header="Kod floty" />
                <DataGridTextColumn Header="Stan" />
                <DataGridTextColumn Header="Id stacji" />
                <DataGridTextColumn Header="Id stojaka" />
                <DataGridTextColumn Header="Szerokosc geo." />
                <DataGridTextColumn Header="Dlugosc geo." />
                <DataGridTextColumn Header="Przebieg[KM]" />
                <DataGridTextColumn Header="Poziom baterii[%]" />
                <DataGridTextColumn Header="Data przegladu" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
