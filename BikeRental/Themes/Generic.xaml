<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:BikeRental.Views">


    <Style TargetType="{x:Type local:WszystkieViewBase}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:WszystkieViewBase}">
                    <Grid Margin="0,10,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="45"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <ToolBar Grid.Row="0" Height="45" Margin="0,2,0,2">
                            <ToggleButton Height="40" Width="40" ToolTip="Dodaj" Margin="0,0,5,0">
                                <Image Source="/Resources/Icons/Dodaj.png" Width="35" Height="35" RenderOptions.BitmapScalingMode="HighQuality"/>
                            </ToggleButton>

                            <ToggleButton Height="40" Width="40" ToolTip="Edytuj" Margin="0,0,5,0">
                                <Image Source="/Resources/Icons/Edytuj.png" Width="35" Height="35" RenderOptions.BitmapScalingMode="HighQuality"/>
                            </ToggleButton>

                            <ToggleButton Height="40" Width="40" ToolTip="Usun" Margin="0,0,5,0">
                                <Image Source="/Resources/Icons/Usun.png" Width="35" Height="35" RenderOptions.BitmapScalingMode="HighQuality"/>
                            </ToggleButton>

                            <ToggleButton Height="40" Width="40" ToolTip="Odswiez" Command="{Binding LoadCommand}">
                                <Image Source="/Resources/Icons/Odswiez.png" Width="35" Height="35" RenderOptions.BitmapScalingMode="HighQuality"/>
                            </ToggleButton>
                        </ToolBar>
                        <Expander Grid.Row="1" Background="Azure" Header="Sortowanie i filtrowanie">
                            <Label>Tu bedzie filtrowanie i sortowanie</Label>
                        </Expander>
                        <ContentPresenter Grid.Row="2" Margin="0,5,0,5" /> <!--w tym miejscu wyswietlaj zawartosc widoku ktory bedzie dziedziczyl z tego widoku-->
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:JedenViewBase}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:JedenViewBase}">
                    <Grid Margin="0,10,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="34"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <ToolBar Grid.Row="0" Height="30" Margin="0,2,0,2">
                            <ToggleButton Content="Zapisz i zamknij" Command="{Binding SaveAndCloseCommand}"/>
                            <ToggleButton Content="Anuluj"/>
                        </ToolBar>
                        <ContentPresenter Grid.Row="1" Margin="0,5,0,5"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
